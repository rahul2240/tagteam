= semantic_form_for(@feed_item, url: hub_feed_feed_item_path(@hub_feed, @feed_item)) do |f|
  - text_field_size = 80

  = f.inputs do
    .row
      .col-md-10
        = f.input :title, size: text_field_size
    .row
      .col-md-10    
        %label Description
        = f.text_area :description
    %br    
    .row
      .col-md-10
        %label Link
        = f.text_field :url, size: text_field_size
    %br
    .row
      .col-md-3
        = f.input :date_published, as: :string, label: 'Published Date', hint: 'yyyy-mm-dd format', input_html: { class: :datepicker }

    = f.action :submit, label: 'Update', as: :button, button_html: { class: 'btn btn-success' }

:javascript
  $('.datepicker').datepicker({
    changeMonth: true,
    changeYear:true,
    changeDay: true,
    yearRange: 'c-500',
    dateFormat: 'yy-mm-dd'
  });